

@{
    ViewData["Title"] = "Dashboard";
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<div>
<p>
    <h1>Welcome, @ViewBag.Username!</h1>
</p>
</div>
<div class="dashboard-grid ">
    <a href="@Url.Action("Create", "Transaction")" class="dashboard-button">
        <i class="fas fa-plus"></i>
        <span>Create</span>
    </a>

    <a href="@Url.Action("List", "Transaction")" class="dashboard-button">
        <i class="fas fa-list"></i>
        <span>Transactions</span>
    </a>

    <a href="@Url.Action("Participants", "Transaction")" class="dashboard-button">
        <i class="fas fa-users"></i>
        <span>Participants</span>
    </a>

    <a href="@Url.Action("Balance", "Transaction")" class="dashboard-button">
        <i class="fas fa-balance-scale"></i>
        <span>Balance</span>
    </a>

    <a href="@Url.Action("UserList", "Account")" class="dashboard-button">
        <i class="fas fa-user"></i>
        <span>Users</span>
    </a>
</div>


<style>
    body {
        background-image: url('/image2.png');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        height: 100vh;
    }

    .dashboard-content {
        background-color: rgba(255, 255, 255, 0.9); 
        padding: 40px;
        border-radius: 10px;
        max-width: 900px;
        margin: 50px auto;
        text-align: center;
    }

    .button-group p {
        margin: 15px 0; 

    .btn {
        display: inline-block;
        font-size: 18px;
        padding: 12px 25px;
        text-transform: uppercase;
        font-weight: bold;
        background-color: #0062ff;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }
</style>
