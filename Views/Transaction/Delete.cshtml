@model Splitwise_clone.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<h2>Delete Transaction</h2>

<h3>Are you sure you want to delete this transaction?</h3>
<div>
    <h4>@Model.Description</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Model.Creator.UserName
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="TransactionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.TransactionId" class="btn btn-secondary">Cancel</a>
</form>
